include ../button/button
//-
  +upload({
    accept: '.jpg, .png',
    maxSize: '10' // МБ
  })

mixin upload(data)
  .upload
    input(id='upload-input' type='file' required='true' data-accept=data.accept data-max-size=data.maxSize name=data.name).upload__input.js-upload-input
    +button({
      tag: 'button',
      mods: 'upload__button js-upload-button',
      text: 'Выбрать файл'
    })